<!-- We will use form_tag here, because form_for wants resource behind it. -->

<div class="login_form row">
	<div class="col-md-6 col-md-offset-3">

		<div class="images-holder">
			<%= image_tag "logo.png" %>
			<%= image_tag "admin_login.png" %>
		</div>

		<%= form_tag sessions_path do %>
			<div class="form-group">
				<%= text_field_tag :email, params[:email], class: "form-control", placeholder: "email" %>
			</div>

			<div class="form-group">
				<%= password_field_tag :password, nil, class: "form-control", placeholder: "password" %>
			</div>

			<%= submit_tag "Login", class: "submit" %>
		<% end %>

	</div>
</div>
