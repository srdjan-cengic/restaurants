<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-primary">
					<div class="panel-heading" align="center">Sign up</div>
					<div class="panel-body">
							<%= form_for @user do |f| %>

								<% if @user.errors.any? %>
									<ul>
									<% @user.errors.full_messages.each do |message| %>
										<li> <%= message %> </li>
									<% end %>
									</ul>
								<% end %>

								<%= f.label :email, class: "control-label" %><br>
								<%= f.text_field :email, :autofocus => true, class: "form-control" %><br>
								
								<%= f.label :password, class: "control-label" %><br>
								<%= f.password_field :password, class: "form-control" %><br>
								
								<%= f.label :password_confirmation, class: "control-label" %><br>
								<%= f.password_field :password_confirmation, class: "form-control" %><br><br>
								
								<%= recaptcha_tags :display => { theme: 'blackglass' } %><br>

								<%= f.submit "Create account", class: "btn btn-primary" %>
							<% end %>
					</div>
				</div>
		</div>
	</div>
</div>

