<%= render "admin/dashboard/navbar" %>
<style type="text/css">
#description {
  width: 500px;
}
</style>
<div class="container-fluid">
  <div class="row">
    <%= render "admin/dashboard/sidebar" %>
    
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 class="page-header">Dashboard</h1>

      <div class="row placeholders">
        <div class="col-xs-6 col-sm-3 placeholder">
          <div id="myfirstchart" style="height: 250px;"></div>
             
        </div>
      </div>

<h1>Listing restaurants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th id="description">Description</th>
      <th>Telephone</th>
      <th>Fb url</th>
      <th>Image</th>
      <th>Owner</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description[0,30]+'...' %></td>
        <td><%= restaurant.telephone %></td>
        <td><%= restaurant.fb_url[0,15]+'...' %></td>
        <td><%= restaurant.image %></td>
        <td><%= User.find(restaurant.owner_id).email %></td>
        <td><%= link_to 'show more', admin_restaurant_path(restaurant),  {:remote => true ,'class'=>'btn btn-info'}  %> </td>
        <td><%= link_to 'Show', admin_restaurant_path(restaurant) %> </td>
        <td><%= link_to 'edit modal', edit_admin_restaurant_path(restaurant),  {:remote => true ,'class'=>'btn btn-info'}  %> </td>
        <td><%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', admin_restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_admin_restaurant_path %>

<div id="showModal" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

<div id="editModal" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

</div>
</div>
</div>