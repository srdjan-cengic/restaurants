<%= render "admin/dashboard/navbar" %>
<div class="container-fluid">
  

  <div class="row">
    <%= render "admin/dashboard/sidebar" %>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1><%= t ".list_coupons" %></h1>
      <hr>

      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t ".restaurant" %> </th>
            <th><%= t ".number" %> </th>
            <th><%= t ".description" %> </th>
            
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @coupones.each do |coupone| %>
            <td><%= coupone.restaurant.name if coupone.restaurant  %></td>
            <td><%= coupone.number_of_available  %></td>
            <td><%= coupone.description[0,30]+'...' %></td>
           
            <td><%= link_to t(".show"), admin_coupone_path(coupone),  {:remote => true ,'class'=>'btn btn-info'}  %> 
            <td><%= link_to t(".edit"), edit_admin_coupone_path(coupone),  {:remote => true ,'class'=>'btn btn-success'}  %> 
            <td><%= link_to t(".destroy"), admin_coupone_path(coupone), 
                                         method: :delete, data: { confirm: 'Are you sure?' }, 'class'=>'btn btn-danger' %></td>
          </tr>

          <% end %>
        </tbody> 
      </table>

      <br>
      

      <%= link_to t(".new_coupons"), new_admin_coupone_path, 'class'=>'btn btn-primary' %>
      <div id="showModal" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

<div id="editModal" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

<% if flash[:notice].present? %>
   <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <li><%= flash[:notice] %></li>
    </div>
<% end %>

    </div>
  </div>
</div>
