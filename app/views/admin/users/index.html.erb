<%= render "admin/dashboard/navbar" %>

<div class="container-fluid">
  <div class="row">
    <%= render "admin/dashboard/sidebar" %>
    
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      
      <div class="row">
        	<h1><%= t ".registered_users" %> </h1>
        	<hr>
      		
			<table class="table table-hover" width="625">
			  <thead>
			    <tr>
			      <th> <%= t ".email" %> </th>
			      <th><%= t ".last_login" %> </th>
			      <th> <%= t ".account_created_at" %></th>
			      <th> <%= t ".confirmed" %></th>
			      <th></th>
			      <th></th>
			      <th></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @users.each do |user| %>
			      <tr>
			        <td><%= user.email %></td>
			        <td><%= l(user.last_login.to_date) %></td>
			        <td><%= l(user.created_at.to_date) %></td>
			        <td><%= user.confirmed %></td>
			        <td><%= link_to t(".show"), admin_user_path(user),'class'=>'btn btn-info'%></td>
			        <td><%= link_to t(".edit"), edit_admin_user_path(user),'class'=>'btn btn-success' %></td>
			        <td><%= link_to t(".destory"), admin_user_path(user), 
			        				 method: :delete, data: { confirm: 'Are you sure you want to delete??' },'class'=>'btn btn-danger' %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>

			<% if flash[:notice].present? %>
			   <div class="alert alert-success alert-dismissable">
			      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			        <li><%= flash[:notice] %></li>
			    </div>
			<% end %>
			
		<%= link_to t(".new_user"), new_admin_user_path, 'class'=>'btn btn-primary' %>

      </div>
    </div>
  </div>
</div>