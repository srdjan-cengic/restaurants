	$('#adminTabs a:first').tab('show');
	$('.admin-tab-notices').html("<%= j render partial: 'reset_password_status', 
								                         locals: { notification: 'success' } %>");
<% else %>
	$('.password-tab-notices').html("<%= j render partial: 'reset_password_status', 
		                                                   locals: { notification: 'danger' } %>");
<% end %>  

