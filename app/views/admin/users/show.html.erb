<%= render "admin/dashboard/navbar" %>

<div class="container-fluid">
  <div class="row">
    <%= render "admin/dashboard/sidebar" %>
    
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
     
      	<div class="row">

	      	<div class="panel panel-primary">
	      		<div class="panel-heading">
	      			 <h3 class="panel-title">User profile</h3>
	      		</div>
	      		
		      		<div class="col-lg-4">

						<p id="notice"><%= notice %></p>

						<p>
							<%= image_tag(@user.picture, :width => 200, :class => "img-rounded img-responsive") if @user.picture.present? %>
						</p>
						<br>
						<table class="table">
		                  <tbody>
		                    <tr class="success">
		                      <td><i class="glyphicon glyphicon-user"></i></td>
		                      <td>Name</td>
		                      <td><strong><%= @user.name %></strong></td>
		                    </tr>
		                    <tr>
		                      <td></td>
		                      <td>Username</td>
		                      <td><strong><%= @user.username %></strong></td>
		                    </tr>
		                    <tr>
		                      <td><i class="glyphicon glyphicon-envelope"></i></td>
		                      <td>Email</td>
		                      <td><strong><%= @user.email %></strong></td>
		                    </tr>
		                    <tr>
		                      <td><i class="glyphicon glyphicon-calendar"></i></td>
		                      <td>Last login</td>
		                      <td><strong><%= l(@user.last_login.to_date) %></strong></td>
		                    </tr>
		                  </tbody>
		                </table>
						
						<br>
						<%= link_to 'Edit', edit_admin_user_path(@user) %> |
						<%= link_to 'Back', admin_users_path %>
					</div>

			</div>
		</div>
	</div>
  </div>
</div>
